# Forzar redirección de www a no-www
RewriteEngine On

# Redirigir www a no-www
RewriteCond %{HTTP_HOST} ^www\.vpconstrucciones\.cl$ [NC]
RewriteRule ^(.*)$ https://vpconstrucciones.cl/$1 [R=301,L]

# Forzar HTTPS
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^vpconstrucciones\.cl$ [NC]
RewriteRule ^(.*)$ https://vpconstrucciones.cl/$1 [R=301,L]

# Remover trailing slashes (excepto la raíz)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} (.+)/$
RewriteRule ^ %1 [R=301,L]
